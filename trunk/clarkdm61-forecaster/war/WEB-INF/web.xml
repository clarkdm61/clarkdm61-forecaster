<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>forecasterServlet</servlet-name>
    <servlet-class>dmc.forecaster.server.ForecasterServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>forecasterServlet</servlet-name>
    <url-pattern>/clarkdm61_forecaster/forecaster</url-pattern>
  </servlet-mapping>
  
      <security-constraint>
        <web-resource-collection>
        	<web-resource-name>AllGoogleUsers</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>
  
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Clarkdm61_forecaster.html</welcome-file>
  </welcome-file-list>

</web-app>
